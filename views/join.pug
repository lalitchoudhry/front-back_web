extends base.pug

block scripts 
    include ../static/script.js
block style 
    style
        include ../static/style.css
        include ../static/join.css

block content 
    .form 
        h3 Fill The Form 
        form(action="/join", method="post", class="myform")
            input(type="text", class="myinput", name="name", placeholder="Enter your Name") 
            input(type="phone", class="myinput", name="phone", placeholder="Mobile No.") 
            input(type="email", class="myinput", name="email", placeholder="Email ID") 
            input(type="text", class="myinput", name="address", placeholder="Address") 
            input(type="text", class="myinput", name="disc", placeholder="Describe yourself") 
            button.btn
                | Submit